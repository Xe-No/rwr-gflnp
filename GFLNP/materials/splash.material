material SplashScreen {
	receive_shadows off 
	technique {
		pass {
			fog_override true
			scene_blend alpha_blend
			texture_unit {
				tex_address_mode clamp
				texture splash.png 2d 0
				wave_xform scale_x sine 1.0 0.1 0.0 0.1
				filtering trilinear
			}

			texture_unit {
				texture splash_shine.png
				scroll_anim 0.1 0.0
			}
		} 
	}
}

