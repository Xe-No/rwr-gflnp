	<visual class="track" mesh_filename="sdkfz2_tracks_left.mesh" offset="0 0 0" >
		<part texture_filename="tank_track.jpg" texture_animation="translate" tire_binding="1" />
	</visual>	
	<visual class="track" mesh_filename="sdkfz2_tracks_right.mesh" offset="0 0 0" >
		<part texture_filename="tank_track.jpg" texture_animation="translate" tire_binding="0" />
	</visual>

	<visual class="track" mesh_filename="sdkfz2_wheels_left.mesh" offset="0 0 0" >
		<part texture_filename="sdkfz_2.jpg" />
		<part texture_filename="sdkfz2_wheel_02.jpg" texture_animation="rotate" tire_binding="0"  />
		<part texture_filename="sdkfz2_wheel_03.jpg"  texture_animation="rotate" tire_binding="0"  />
		<part texture_filename="sdkfz2_wheel_04.jpg" texture_animation="rotate" tire_binding="0"  />
	</visual>	
	<visual class="track" mesh_filename="sdkfz2_wheels_right.mesh" offset="0 0 0" >
		<part texture_filename="sdkfz_2.jpg" />
		<part texture_filename="sdkfz2_wheel_02.jpg" texture_animation="rotate" tire_binding="1"  />
		<part texture_filename="sdkfz2_wheel_03.jpg"  texture_animation="rotate" tire_binding="1"  />
		<part texture_filename="sdkfz2_wheel_04.jpg" texture_animation="rotate" tire_binding="1"  />
	</visual>	

	<character_slot type="driver" 	 enter_position="0 0.55 0.6" 	 seat_position="0 0.55 0.42" rotation="0" 	exit_rotation="1.57" hiding="0" animation_key="driving atv" marker_offset="0 0.35 0.2" />
	<character_slot type="passenger" position="0.35 0.37 -1.1" rotation="4.5" exit_rotation="1.57" hiding="0" animation_key="travelling car, aiming, left" marker_offset="0 0.35 -0.2" />

	<item_container class="armory" offset="0 0.45 -2" soldier_group="supply" />

	<!-- sound handling -->
	<rev_sound filename="jeep2_rev0.wav" low_pitch="0.8" high_pitch="1.1" low_rev="0.0" high_rev="0.3" volume="0.8" />
	<rev_sound filename="jeep2_rev2.wav" low_pitch="0.6" high_pitch="1.1" low_rev="0.2" high_rev="0.7" volume="0.65" />
	<rev_sound filename="jeep2_rev3.wav" low_pitch="0.8" high_pitch="1.3" low_rev="0.7" high_rev="1.1" volume="0.6" /> 
	
	<sound key="slide" filename="slide_noise.wav" volume="0.5" />
	<sound key="squeal" filename="tire_squeal.wav" volume="0.5" />
	<sound key="ignition" filename="truck_ignition.wav" volume="0.5" />
	<sound key="horn" filename="horn_jeep.wav" />   
	<sound key="hit" filename="car_hit1.wav" volume="0.5" />
	<sound key="hit" filename="car_hit2.wav" volume="0.5" />
	<sound key="hit" filename="car_hit3.wav" volume="0.5" />
	<sound key="destroy" filename="vehicle_explosion_1.wav" />   
