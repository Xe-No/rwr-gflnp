	max_health="5.4" 
	mass="2.0" 
	extent="2 0 4.6" 
	offset="0 0 0" 
	top_offset="0 1.5 0" 
	collision_model_pos="0 0.2 0.0" 
	collision_model_extent="2 1.04 4.7" 
	visual_offset="0 0.117 -2.33 " 
	gravity="-39" 
	preserve_motion_on_impact_factor="0.2" 
	friction_offset="0.1" 
	drag_offset="+0.15" 
	destroy_on_top_hit="1" 
	destroy_on_top_hit_time="1.0" 
	top_hit_tracking_time="0.6" />  

	<sky_diving chute_offset="0 1.3 0" trigger_height="20.0" gravity="-10" mesh_filename="chute_medium.mesh" texture_filename="chute.png" />

	<visual class="chassis" mesh_filename="sdkfz2_body.mesh" texture_filename="sdkfz_2.jpg" max_tilt="0.04" />
	<visual class="chassis" key="broken" mesh_filename="sdkfz2_body.mesh" texture_filename="sdkfz_2.jpg" />
	<visual class="front_tire" mesh_filename="sdkfz2_wheels_front.mesh" texture_filename="sdkfz_2.jpg" />
	
