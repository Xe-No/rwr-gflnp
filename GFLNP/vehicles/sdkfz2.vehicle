<?xml version="1.0" encoding="utf-8"?>
<vehicle file="vehicle_base.vehicle" name="sdkfz2" key="sdkfz2.vehicle" respawn_time="180" time_to_live_unsteerable="175" map_view_atlas_index="28" minimum_fill_requirement="1"  allow_ai_to_use="0" >
	<tag name="metal_thin" />
	<tag name="supply" />
	<tag name="tactical" />    

	<tire_set offset="0 0.0 1.8" radius="0.4" />
	<tire_set offset="1 0.0 0" radius="0.4" />
	<tire_set offset="1 0.0 -2.1" radius="0.4" />

	<control 
	max_speed="15.0" 
	acceleration="20.0" 
	max_reverse_speed="10.0" 
	min_health_to_steer="0.6"
	max_rotation="0.5" 
	max_water_depth="1.4" 
	steer_smoothening="0.98"
	tracked="1" 
	gears="1"
	max_limiter_speed="20.0"/>

